@model List<MyBlog.ViewModels.ModifyOverviewModel>;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.PageName = "Modify Posts";
}

    <div class="add-button">
        <a asp-controller="Blog" asp-action="Create" class="btn btn-primary">Add New Blog</a>
    </div>
    
    <div class="list-of-blogs">
        <table class="table">
            <thead>
                <tr>
                    <th>Blog</th>
                    <th>Action</th>
                    <th>Approve Posts</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in @Model)
                {
                    <tr>
                        <td>@blog.Title</td>
                        <td>
                            <a asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" onclick="return confirm('Are you sure you want to delete this post?')">Delete</a> |
                            <a asp-controller="Blog" asp-action="Modify" asp-route-id="@blog.Id">Modify</a>
                        </td>
                        <td>
                            @if (!blog.IsApproved)
                            {
                                <a asp-controller="Blog" asp-action="Apporve" asp-route-id="@blog.Id">Approve</a>
                            }
                            else
                            {
                                <span>Approved</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>