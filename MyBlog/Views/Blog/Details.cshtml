@model MyBlog.Models.Blog

@{
    Layout = "_Layout";
    ViewBag.PageName = "Blog Details";
}

<div class="blog-details">
    <img class="blog-img" src="@Model.ImageUrl" />
    <div class="blog-title">@Model.Title</div>
    <div class="blog-desc">
        <p>@Model.Description</p>
    </div>
    <div class="blog-text">
        <p>@Model.Text</p>
    </div>
</div>

